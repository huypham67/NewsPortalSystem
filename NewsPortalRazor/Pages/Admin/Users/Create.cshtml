@page
@model NewsPortalRazor.Pages.Admin.Users.CreateModel

@{
    ViewData["Title"] = "Create User";
}

<h2 class="mb-4"><i class="fas fa-user-plus"></i> Create New User</h2>

<div class="card shadow-lg p-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row g-3">
            <!-- Full Name -->
            <div class="col-md-6">
                <label asp-for="User.FullName" class="form-label fw-bold"><i class="fas fa-user"></i> Full Name</label>
                <input asp-for="User.FullName" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="User.FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="col-md-6">
                <label asp-for="User.Email" class="form-label fw-bold"><i class="fas fa-envelope"></i> Email</label>
                <input asp-for="User.Email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="col-md-6">
                <label asp-for="User.Password" class="form-label fw-bold"><i class="fas fa-lock"></i> Password</label>
                <div class="input-group">
                    <input asp-for="User.Password" type="password" class="form-control" placeholder="Enter password" id="passwordInput" />
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>

            <!-- Role -->
            <div class="col-md-6">
                <label asp-for="User.Role" class="form-label fw-bold"><i class="fas fa-user-tag"></i> Role</label>
                <select asp-for="User.Role" class="form-select">
                    <option value="Admin">Admin</option>
                    <option value="Editor">Editor</option>
                    <option value="Viewer">Viewer</option>
                </select>
                <span asp-validation-for="User.Role" class="text-danger"></span>
            </div>

            <!-- Active Status -->
            <div class="col-md-6">
                <label asp-for="User.IsActive" class="form-label fw-bold"><i class="fas fa-toggle-on"></i> Status</label>
                <select asp-for="User.IsActive" class="form-select">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="User.IsActive" class="text-danger"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="mt-4 d-flex justify-content-between align-items-center">
            <div>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Create
                </button>
                <a asp-page="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function togglePassword() {
            var passwordInput = document.getElementById("passwordInput");
            passwordInput.type = passwordInput.type === "password" ? "text" : "password";
        }
    </script>
}