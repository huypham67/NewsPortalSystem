@page
@model NewsPortalRazor.Pages.Admin.Users.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<h2 class="mb-4"><i class="fas fa-user"></i> User Details</h2>

<div class="card shadow-lg p-4">
    <div class="row g-3">
        <!-- Full Name -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-user"></i> Full Name</label>
            <input class="form-control-plaintext fw-semibold" value="@Model.User.FullName" readonly />
        </div>

        <!-- Email -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-envelope"></i> Email</label>
            <input class="form-control-plaintext fw-semibold text-muted" value="@Model.User.Email" readonly />
        </div>

        <!-- Role -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-user-tag"></i> Role</label>
            <input class="form-control-plaintext fw-semibold" value="@Model.User.Role" readonly />
        </div>

        <!-- Active Status -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-toggle-on"></i> Status</label>
            <div>
                <span class="badge @(Model.User.IsActive ? "bg-success" : "bg-danger") p-2 fs-6">
                    @(Model.User.IsActive ? "Active" : "Inactive")
                </span>
            </div>
        </div>

        <!-- Created At -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-calendar-alt"></i> Created At</label>
            <input class="form-control-plaintext fw-semibold" value="@Model.User.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
        </div>

        <!-- Last Login -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-sign-in-alt"></i> Last Login</label>
            <input class="form-control-plaintext fw-semibold" value="@(Model.User.LastLoginAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")" readonly />
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 d-flex justify-content-between align-items-center">
        <a asp-page="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a asp-page="Edit" asp-route-id="@Model.User.UserId" class="btn btn-primary btn-lg">
            <i class="fas fa-edit"></i> Edit
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}