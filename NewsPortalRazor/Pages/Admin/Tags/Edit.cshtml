@page
@model NewsPortalRazor.Pages.Admin.Tags.EditModel

@{
    ViewData["Title"] = "Edit Tag";
}

<h2 class="mb-4"><i class="fas fa-tags"></i> Edit Tag</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card shadow-lg p-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="Tag.TagId" />

        <div class="row g-3">
            <!-- Tag Name -->
            <div class="col-md-6">
                <label asp-for="Tag.Name" class="form-label fw-bold"><i class="fas fa-tag"></i> Name</label>
                <input asp-for="Tag.Name" class="form-control" placeholder="Enter tag name" />
                <span asp-validation-for="Tag.Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="col-md-6">
                <label asp-for="Tag.Description" class="form-label fw-bold"><i class="fas fa-align-left"></i> Description</label>
                <textarea asp-for="Tag.Description" class="form-control" placeholder="Enter tag description" rows="4"></textarea>
                <span asp-validation-for="Tag.Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-4 d-flex justify-content-between align-items-center">
            <div>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-page="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
