@page
@model NewsPortalRazor.Pages.Admin.Tags.DetailsModel

@{
    ViewData["Title"] = "Tag Details";
}

<h2 class="mb-4"><i class="fas fa-tag"></i> Tag Details</h2>

<div class="card shadow-lg p-4">
    <div class="row g-3">
        <!-- Name -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-font"></i> Tag Name</label>
            <input class="form-control-plaintext fw-semibold" value="@Model.Tag.Name" readonly />
        </div>

        <!-- Description -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-align-left"></i> Description</label>
            <input class="form-control-plaintext fw-semibold text-muted" value="@Model.Tag.Description" readonly />
        </div>

        <!-- Created At -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-calendar-plus"></i> Created At</label>
            <input class="form-control-plaintext fw-semibold" value="@Model.Tag.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
        </div>

        <!-- Last Modified -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-edit"></i> Last Modified</label>
            <input class="form-control-plaintext fw-semibold text-muted" value="@(Model.Tag.ModifiedAt?.ToString("yyyy-MM-dd HH:mm:ss") ?? "Never")" readonly />
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 d-flex justify-content-between align-items-center">
        <a asp-page="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <a asp-page="Edit" asp-route-id="@Model.Tag.TagId" class="btn btn-primary btn-lg">
            <i class="fas fa-edit"></i> Edit
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }   
}
