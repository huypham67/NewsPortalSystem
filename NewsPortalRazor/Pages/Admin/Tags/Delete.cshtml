@page
@model NewsPortalRazor.Pages.Admin.Tags.DeleteModel

@{
    ViewData["Title"] = "Delete Tag";
}

<h2 class="mb-4 text-danger"><i class="fas fa-trash-alt"></i> Delete Tag</h2>

<div class="card shadow-lg p-4 border-danger">
    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>
        <span><strong>Warning:</strong> You are about to delete this tag. This action is irreversible!</span>
    </div>

    <div class="row g-3">
        <!-- Name -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-font"></i> Tag Name</label>
            <input class="form-control-plaintext fw-semibold" value="@Model.Tag.Name" readonly />
        </div>

        <!-- Description -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-align-left"></i> Description</label>
            <input class="form-control-plaintext fw-semibold text-muted" value="@Model.Tag.Description" readonly />
        </div>

        <!-- Created At -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-calendar-plus"></i> Created At</label>
            <input class="form-control-plaintext fw-semibold" value="@Model.Tag.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
        </div>

        <!-- Last Modified -->
        <div class="col-md-6">
            <label class="form-label fw-bold"><i class="fas fa-edit"></i> Last Modified</label>
            <input class="form-control-plaintext fw-semibold text-muted" value="@Model.Tag.ModifiedAt?.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
        </div>
    </div>

    <!-- Delete Confirmation -->
    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Tag.TagId" />
        <div class="d-flex justify-content-between align-items-center">
            <a asp-page="Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Are you sure you want to delete this tag?');">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
